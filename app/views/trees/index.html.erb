<div class="container">

  <h1>Our available Trees</h1>
  <hr>
  <div class="d-flex justify-content-between">
    <%= link_to "See your adoptions", tree_adoptions_path(@trees), class:"btn btn-primary" %>
    <%= link_to "Add a Tree", new_tree_path, class:"btn btn-primary" %>
  </div>
  <hr>

  <div class="d-flex flex-wrap">
    <% @trees.each do |tree| %>
      <%= link_to tree_path(tree) do %>
        <div class="card" style="width:400px">
          <%= image_tag 'arbre2.jpg', class:"card-img-top", style:"width:100%" %>
          <div class="card-body">
            <h4 class="card-title text-decoration-none"><%= tree.name %></h4>
            <p class="card-text text-decoration-none"><%= tree.price_per_year %>â‚¬</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
